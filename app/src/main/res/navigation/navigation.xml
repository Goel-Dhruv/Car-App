<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.example.app1.MainFragment"
        android:label="Dashboard">
        <action
            android:id="@+id/action_main_fragment_to_car_model_fragment"
            app:destination="@id/car_model_fragment" />
        <argument
            android:name="number"
            android:defaultValue="1" />
    </fragment>


    <fragment
        android:id="@+id/car_model_fragment"
        android:name="com.example.app1.ui.main.CarModelFragment"
        android:label="Dashboard" />


</navigation>